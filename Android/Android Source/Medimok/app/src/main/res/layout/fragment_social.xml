<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
       <variable
           name="social"
           type="com.example.medimok.views.fragment.HealthFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lt_grey">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/_12sdp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_4sdp"
                android:elevation="@dimen/_2sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight=".8"
                            android:layout_height="wrap_content"
                            android:text="@string/server_date"
                            android:textColor="@color/color_primary"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/poppinssemibold" />
                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="wrap_content"
                            android:text="22-01-2021"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_12sdp"
                            android:singleLine="true"
                            android:fontFamily="@font/poppinssemibold"
                            android:ellipsize = "marquee"
                            android:fadingEdge = "horizontal"
                            android:marqueeRepeatLimit = "marquee_forever"
                            android:scrollHorizontally = "true"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_6sdp"
                        android:layout_margin="@dimen/_8sdp"
                        android:elevation="@dimen/_4sdp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white">

                            <ImageView
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/ic_heartrate"
                                app:tint="@color/color_primary"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinssemibold"
                                android:gravity="center"
                                android:text="Heart Rate"
                                android:textSize="@dimen/_10sdp" />
                            <TextView
                                android:id="@+id/tvHeartReport"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/poppinssemibold"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_6sdp"
                        android:layout_margin="@dimen/_8sdp"
                        android:elevation="@dimen/_4sdp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white">

                            <ImageView
                                android:id="@+id/imgPicture"
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/ic_blood_pressure"
                                app:tint="@color/color_primary"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinssemibold"
                                android:gravity="center"
                                android:text="Blood Pressure"
                                android:textSize="@dimen/_10sdp" />
                            <TextView
                                android:id="@+id/tvBloodPressure"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/poppinssemibold"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_6sdp"
                        android:layout_margin="@dimen/_8sdp"
                        android:elevation="@dimen/_4sdp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white">

                            <ImageView
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/ic_gulucose"
                                app:tint="@color/color_primary"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinssemibold"
                                android:gravity="center"
                                android:text="Gulucose"
                                android:textSize="@dimen/_10sdp" />
                            <TextView
                                android:id="@+id/tvGlucose"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/poppinssemibold"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_6sdp"
                        android:layout_margin="@dimen/_8sdp"
                        android:elevation="@dimen/_4sdp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white">

                            <ImageView
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/ic_oxygen"
                                app:tint="@color/color_primary"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinssemibold"
                                android:gravity="center"
                                android:text="Oxygen"
                                android:textSize="@dimen/_10sdp" />
                            <TextView
                                android:id="@+id/tvOxygen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/poppinssemibold"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_6sdp"
                        android:layout_margin="@dimen/_8sdp"
                        android:elevation="@dimen/_4sdp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white">

                            <ImageView
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/ic_sugar_level"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinssemibold"
                                android:gravity="center"
                                android:text="Sugar"
                                android:textSize="@dimen/_10sdp" />
                            <TextView
                                android:id="@+id/tvSugar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/poppinssemibold"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_6sdp"
                        android:layout_margin="@dimen/_8sdp"
                        android:elevation="@dimen/_4sdp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white">

                            <ImageView
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/ic_cholesterol"
                                app:tint="@color/color_primary"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinssemibold"
                                android:gravity="center"
                                android:text="cholesterol"
                                android:textSize="@dimen/_10sdp" />
                            <TextView
                                android:id="@+id/tvColostrol"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/poppinssemibold"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>